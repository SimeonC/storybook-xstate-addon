{
  "name": "storybook-xstate-addon",
  "version": "2.1.0",
  "description": "Storybook addon for displaying xstate inspector inside storybook",
  "keywords": [
    "storybook-addons",
    "xstate",
    "@xstate/inspect",
    "devtools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simeonc/storybook-xstate-addon"
  },
  "author": "SimeonC",
  "license": "MIT",
  "main": "dist/preset",
  "files": [
    "dist/**/*",
    "README.md",
    "RenderMachine.js",
    "RenderMachine.d.ts",
    "preset.js"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "tsc": "tsc",
    "build": "tsc -d && npm run build:js && npm run build:js:clean",
    "build:js": "babel ./src --out-dir ./dist --extensions .ts,.tsx,.js,.jsx",
    "build:js:clean": "rimraf dist/{**/*,*}.d.js",
    "build:watch": "babel ./src --out-dir ./dist --extensions .ts,.tsx,.js,.jsx --watch",
    "storybook": "start-storybook -p 6006",
    "start": "concurrently \"npm run storybook -- --no-manager-cache --quiet\" \"npm run build:watch\"",
    "build-storybook": "build-storybook",
    "release": "npm run build && auto shipit"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "10.32.6",
    "@auto-it/first-time-contributor": "10.32.6",
    "@auto-it/released": "10.32.6",
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@storybook/addons": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@types/react-dom": "17.0.11",
    "@xstate/inspect": "^0.6",
    "@xstate/react": "^2.0.0",
    "auto": "^10.32.6",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "prettier": "^2.5.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "storybook": "^6.4.19",
    "typescript": "^4.5.5",
    "xstate": "^4.30.1"
  },
  "peerDependencies": {
    "@storybook/addons": "^6.4.19",
    "@storybook/api": "^6.4.19",
    "@storybook/components": "^6.4.19",
    "@storybook/core-events": "^6.4.19",
    "@storybook/theming": "^6.4.19",
    "@xstate/inspect": "^0.6",
    "@xstate/react": "^2",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "storybook": "^6.4.19",
    "xstate": "^4.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "storybook": {
    "displayName": "XState Inspector",
    "unsupportedFrameworks": [],
    "supportedFrameworks": [
      "react",
      "vue",
      "angular"
    ],
    "icon": "https://user-images.githubusercontent.com/1093738/101672561-06aa7480-3a24-11eb-89d1-787fa7112138.png"
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor",
      "released"
    ]
  }
}
