{
  "name": "storybook-xstate-addon",
  "version": "1.0.2",
  "description": "Storybook addon for displaying xstate inspector inside storybook",
  "keywords": [
    "storybook-addons",
    "xstate",
    "@xstate/inspect",
    "devtools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simeonc/storybook-xstate-addon"
  },
  "author": "SimeonC",
  "license": "MIT",
  "main": "dist/preset",
  "files": [
    "dist/**/*",
    "README.md",
    "RenderMachine.js",
    "RenderMachine.d.ts",
    "preset.js"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "tsc": "tsc",
    "build": "tsc -d && npm run build:js && npm run build:js:clean",
    "build:js": "babel ./src --out-dir ./dist --extensions .ts,.tsx,.js,.jsx",
    "build:js:clean": "rimraf dist/{**/*,*}.d.js",
    "build:watch": "babel ./src --out-dir ./dist --extensions .ts,.tsx,.js,.jsx --watch",
    "storybook": "start-storybook -p 6006",
    "start": "concurrently \"npm run storybook -- --no-manager-cache --quiet\" \"npm run build:watch\"",
    "build-storybook": "build-storybook",
    "release": "npm run build && auto shipit"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@storybook/react": "^6.2.1",
    "@types/react-dom": "17.0.3",
    "@xstate/inspect": "^0.4.1",
    "@xstate/react": "^1.3.1",
    "auto": "^10.24.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "4.2.3",
    "xstate": "4.16.2"
  },
  "peerDependencies": {
    "@storybook/addons": "^6.1.14",
    "@storybook/api": "^6.1.14",
    "@storybook/components": "^6.1.14",
    "@storybook/core-events": "^6.1.14",
    "@storybook/theming": "^6.1.14",
    "@xstate/inspect": "^0.4",
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0",
    "xstate": "^4"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "storybook": {
    "displayName": "Addon Kit",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  }
}
